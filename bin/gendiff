#!/usr/bin/env php

<?php

$doc = <<<DOCOPT

Generate diff

Usage:
    gendiff (-h|--help) 
    gendiff (-v|--version)

Options: 
    -h --help     Show this screen.
    -v --version  Show version.

DOCOPT;

require('vendor/docopt/docopt/src/docopt.php');

$args = Docopt::handle($doc, array('help' => true, 'version'=> '123456', 'optionsFirst' => false));
foreach ($args as $k=>$v)
    echo $k.': '.json_encode($v).PHP_EOL;